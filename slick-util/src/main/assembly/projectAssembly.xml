<assembly>
    <id>project</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/slick/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>**/*.log</exclude>
                <exclude>**/${project.build.directory}/**</exclude>
                <exclude>${output.dir}/**</exclude>
                <exclude>${packages.output.dir}/**</exclude>
                <exclude>**/*.ks</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
